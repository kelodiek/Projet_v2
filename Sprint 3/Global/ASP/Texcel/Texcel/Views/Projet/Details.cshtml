@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Projet";
}
<section class="content-header">
    <h1>
        Projet
        <small>Détails</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li><a href="#">Projet</a></li>
        <li class="active">Détails</li>
    </ol>
</section>

<section class="content">
    <div class="box box-default color-palette-box">
        <div class="box-header with-border">
            <div class="btn-group-sm">
                <a class="btn btn-sm btn-info btn-flat pull-left">Enregistrer</a>
                <a class="btn btn-sm btn-info btn-flat pull-left">Modifier</a>
                <a class="btn btn-sm btn-info btn-flat pull-left">Supprimer</a>


                <a class="btn btn-sm btn-info btn-flat pull-left">Copier</a>

                <a class="btn btn-sm btn-info btn-flat pull-left">Afficher équipe</a>
            </div>
            <div class="btn-group-sm">
                    <a class="btn btn-sm btn-info btn-flat pull-right">Retour</a>
            </div>
        </div>
        <div class="box-body">
            <div style="width:50%; float:left;">
                <dl class="dl-horizontal">
                    <dt>Code projet: </dt>
                    <dd>
                        <input type="text" size="10" maxlength="10" name="txtProjet" value=" " />
                    </dd>

                    <dt>Chef de Projet: </dt>
                    <dd>
                        <select>
                            <option value="Aucun"></option>
                            <option value="volvo">Paul Girard</option>
                            <option value="saab">Guy Larouche</option>
                            <option value="mercedes">Lise Gagnon</option>
                        </select>
                    </dd>

                    <dt>Nom: </dt>
                    <dd>
                        <input type="text" size="30" maxlength="30" name="txtNom" value=" " />
                    </dd>

                    <dt>Version jeu: </dt>
                    <dd>
                        <select>
                            <option value="aucun"></option>
                            <option value="volvo">Call of Duty Blackops 8 solo</option>
                            <option value="saab">Tales of Zestiria 2 player local 8.7</option>
                        </select>
                    </dd>

                    <dt>Date de création: </dt>
                    <dd>
                        <input type="date" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask="">
                    </dd>

                    <dt>Date de d'échéance: </dt>
                    <dd>
                        <input type="date" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask="">
                    </dd>

                    <dt>Description: </dt>
                    <dd>
                        <textarea type="text" style="width:95%;" rows="5" name="txtNom" value=" "></textarea>
                    </dd>
                </dl>
            </div>
            <div style="width:50%; float: right;">

                <label>Autre: </label><br />
                <textarea type="text" style="width:95%;" rows="6" name="txtNom" value=" "></textarea><br />
                <label>Objectif: </label><br />
                <textarea type="text" style="width:95%;" rows="6" name="txtNom" value=" "></textarea><br />

            </div>
        </div>

    </div>
    <div class="box box-default color-palette-box table-responsive">
            <div class="box-header with-border">
                <div class="btn-group-sm">
                    <a class="btn btn-sm btn-info btn-flat pull-left">Ajouter un cas de test</a>
                    <a class="btn btn-sm btn-info btn-flat pull-left">Supprimer</a>
                </div>
            </div>
            <div class="box-body">
                <table class="table table-bordered">
                    <tr>
                        <th></th>
                        <th>Code</th>
                        <th>Titre</th>
                        <th>Priorité</th>
                        <th>Difficulté</th>
                        <th>Date de création</th>
                        <th>Date d'échéance</th>
                        <th></th>
                    </tr>

                    @for (int i = 0; i < 5; i++)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" class="checkbox" />
                            </td>
                            <td>
                                @("Test" + (i + 1))
                            </td>
                            <td>
                                @("CasDeTest" + (i + 1))
                            </td>
                            <td>
                                Urgent
                            </td>
                            <td>
                                Intermédiaire
                            </td>
                            <td>
                                23/10/2015
                            </td>
                            <td>
                                24/10/2015
                            </td>

                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-info btn-sm">Détails</button>
                                    <button type="button" class="btn btn-info dropdown-toggle btn-sm" data-toggle="dropdown" aria-expanded="false">
                                        <span class="caret"></span>
                                        <span class="sr-only">Toggle Dropdown</span>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a href="#">Détails</a></li>
                                        <li><a href="#">Copier</a></li>
                                        <li><a href="#">Associer une équipe</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
</section>


