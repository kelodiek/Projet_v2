@{
    Layout = "~/Views/Shared/_LayoutTest2.cshtml";
}
@{
    ViewBag.Title = "Projet";
}
<section class="content-header">
    <h1>
        Projet
        <small>Détails</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li><a href="#">Projet</a></li>
        <li class="active">Détails</li>
    </ol>
</section>

<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <div class="btn-group-sm">
                <a class="btn btn-sm btn-info btn-flat pull-left">Enregistrer</a>
                <a class="btn btn-sm btn-info btn-flat pull-left">Modifier</a>
                <a class="btn btn-sm btn-info btn-flat pull-left">Supprimer</a>


                <a class="btn btn-sm btn-info btn-flat pull-left">Copier</a>

                <a class="btn btn-sm btn-info btn-flat pull-left">Afficher équipe</a>
            </div>
            <div class="btn-group-sm">
                <a class="btn btn-sm btn-info btn-flat pull-right">Retour</a>
            </div>
        </div>
        <!-- /.box-header -->

        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Code projet</label>
                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="-1" aria-hidden="true">
                            <option selected="selected">Alabama</option>
                            <option>Alaska</option>
